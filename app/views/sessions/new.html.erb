<div>
	<% if flash[:alert] %>
	<p id="notice" >
		<%= flash[:alert] %>
	</p>
	<% end %>
	<%= form_tag do %>
	<div class="field">
		<label for="name" >Name:</label>
		<%= text_field_tag :name, params[:name] %>
	</div>
	<div>
		<label for="password" >Password:</label>
		<%= password_field_tag :password, params[:password] %>
	</div>

	<div class="actions">
		<%= submit_tag "Login" %>
	</div>
	<% end %>
</div>