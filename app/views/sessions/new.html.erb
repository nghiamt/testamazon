<div id='login'>
	<h2>Login</h2>
	<% if flash[:alert] %>
	<p id="notice" >
		<%= flash[:alert] %>
	</p>
	<% end %>

	<%= form_tag do %>
	<table>
		<tr>
			<td class="label"><label for="name" >Name:</label></td>
			<td><%= text_field_tag :name, params[:name], :size => 30%></td>
		</tr>
		<tr>
			<td class="label"><label for="password" >Password:</label></td>
			<td><%= password_field_tag :password, params[:password], :size => 30 %></td>
		</tr>
	
	<tr>
		<td></td>
		<td><%= submit_tag "Login" %></td>
	</tr>
	</table>
	<% end %>
</div>