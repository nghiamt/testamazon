<div id = "product_list">
	<h1>Listing products</h1>

	<table>

		<% @products.each do |product| %>
		<tr class="<%= cycle('line_odd', 'line_even')%>">
			<td> <%= image_tag(product.image, :class => "image")%> </td>
			<td class ="product_info">
			<dt>
				<%= product.title%>
			</dt>
			<dd>
				<%= product.info%>
			</dd>
			<dd>
				<%= button_to 'Add to Cart', line_products_path(:product_id => product)%>
			</dd></td>
			<td class="price"> $<%= product.price %> </td>
			<td class="category"><%= product.category %></td>
		</tr>
		<% end %>
	</table>

	<br />
</div>
<%= link_to 'Product', products_path%><br />
<%= link_to 'Cart', carts_path%><br />
<%= link_to 'Line_product', line_products_path%><br />
<%= link_to 'Orders', orders_path%><br />
<%= link_to 'Users', users_path%><br />
<%= button_to 'Logout', logout_path, :method => :delete %>

