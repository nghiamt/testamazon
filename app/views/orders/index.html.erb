<div id="user">
<h1>Listing orders</h1>

<table>
  <tr>
    <th class="name">Name</th>
    <th class="address">Address</th>
    <th class="order">Pay type</th>
    <th class="order"></th>
    <th class="order"></th>
    <th class="order"></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td class="name"><%= order.name %></td>
    <td class="address"><%= order.address %></td>
    <td class="order"><%= order.pay_type %></td>
    <td class="action"><%= link_to 'Show', order %>
    <%= link_to 'Edit', edit_order_path(order) %>  
    <%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<p><%= will_paginate @orders %></p><br />
<%= link_to 'New Order', new_order_path %>

</div>