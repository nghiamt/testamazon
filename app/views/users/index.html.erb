<div id="user">
<h1>Listing users</h1>

<table>
  <tr>
    <th class="order">Name</th>
    <th class="order">Password</th>
    <th class="order">Info</th>
    <th class="order">Is admin</th>
    <th class="order"></th>
    <th class="order"></th>
    <th class="order"></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td class="order"><%= user.name %></td>
    <td class="order"><%= user.password %></td>
    <td class="order"><%= user.info %></td>
    <td class="order"><%= user.is_admin %></td>
    <td class="action"><%= link_to 'Show', user %> 
    <%= link_to 'Edit', edit_user_path(user) %>
    <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<p><%= will_paginate @users %></p><br />
<%= link_to 'New User', new_user_path %>

</div>