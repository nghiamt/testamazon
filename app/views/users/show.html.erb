<div id="user">
	<p id="notice">
		<%= notice %>
	</p>
	<h2>User Detail:</h2>

	<p style="margin-left: 20px;">
		<b>Username:</b>
		<%= @user.name %>
	</p>

	<p style="margin-left: 20px;">
		<b>Password:</b>
		<% if session[:user_id]%>
		<% if User.find_by_id(session[:user_id]).is_admin%>
		<%= @user.password%>
		<%else%>  ********
		<%end%>
		<%end%>

	</p>

	<p style="margin-left: 20px;">
		<b>Info:</b>
		<%= @user.info %>
	</p>

	<p style="margin-left: 20px;">
		<b>Is admin:</b>
		<% if @user.is_admin %>
		Yes
		<%else%>
		No
		<%end%>
	</p>

	<%= link_to 'Edit', edit_user_path(@user) %> |
	<% if session[:user_id]%>
	<% if User.find_by_id(session[:user_id]).is_admin%>
	<%= link_to 'Back', users_path %>
	<%else%>
	<%= link_to 'Home', root_path %>
	<%end%>
	<%else%>
	<%= link_to 'Login', login_path %>
	<%end%>
</div>
